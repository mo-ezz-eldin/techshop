@model List<order>

<div class="container py-5">
    <div class="order-header text-center mb-5">
        <h2 class="text-primary">
            <i class="bi bi-box-seam"></i> My Orders
        </h2>
        <p class="text-muted">Welcome, @User.Identity?.Name!</p>
    </div>

    @if (!Model.Any())
    {
        <div class="empty-state">
            <div class="empty-state-content">
                <div class="empty-state-icon">
                    <i class="bi bi-bag"></i>
                </div>
                <h3>No Orders Yet</h3>
                <p>Start shopping to see your orders here!</p>
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">
                    <i class="bi bi-shop"></i> Start Shopping
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="orders-grid">
            @foreach (var order in Model)
            {
                <div class="order-card">
                    <div class="order-card-body">
                        <div class="product-info">
                            <img src="@order.product.imgsource" alt="@order.product.Name" class="product-image">
                            <div class="product-details">
                                <h5 class="product-name">@order.product.Name</h5>
                                <p class="customer-name">
                                    <i class="bi bi-person-circle"></i>
                                    @order.user.UserName
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .orders-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 1.5rem;
        margin-top: 2rem;
    }

    .order-card {
        background: white;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
        transition: all 0.3s ease;
    }

    .order-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(99, 102, 241, 0.15);
    }

    .order-card-body {
        padding: 1.5rem;
    }

    .product-info {
        display: flex;
        gap: 1.5rem;
        align-items: center;
    }

    .product-image {
        width: 100px;
        height: 100px;
        object-fit: cover;
        border-radius: 10px;
    }

    .product-details {
        flex: 1;
    }

    .product-name {
        color: var(--primary);
        margin-bottom: 0.5rem;
        font-size: 1.1rem;
    }

    .customer-name {
        color: #6c757d;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
    }

    .empty-state-content {
        max-width: 400px;
        margin: 0 auto;
    }

    .empty-state-icon {
        font-size: 4rem;
        color: var(--primary);
        margin-bottom: 1.5rem;
    }

    .empty-state h3 {
        margin-bottom: 1rem;
        color: #1a1a1a;
    }

    .empty-state p {
        color: #6c757d;
        margin-bottom: 2rem;
    }

    @@media (max-width: 768px) {
        .orders-grid {
            grid-template-columns: 1fr;
        }
    }
</style>