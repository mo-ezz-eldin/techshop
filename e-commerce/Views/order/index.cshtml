@model List<order>

<div class="container-fluid py-4">
    <div class="row mb-4 align-items-center">
        <div class="col-md-6">
            <h2 class="display-6 text-primary mb-0">
                <i class="bi bi-kanban"></i> Orders Management
            </h2>
            <p class="text-muted mt-2">Manage and track all customer orders</p>
        </div>
        <div class="col-md-6">
            <div class="d-flex justify-content-md-end gap-3">
                <div class="search-box">
                    <i class="bi bi-search search-icon"></i>
                    <input type="text" id="orderSearch" class="form-control" placeholder="Search orders...">
                </div>
                <select class="form-select filter-select">
                    <option value="all">All Orders</option>
                    <option value="pending">Pending</option>
                    <option value="processing">Processing</option>
                    <option value="completed">Completed</option>
                    <option value="cancelled">Cancelled</option>
                </select>
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <div class="empty-state">
                <i class="bi bi-clipboard-x display-1"></i>
                <h3 class="mt-4">No Orders Found</h3>
                <p class="text-muted">There are currently no orders in the system.</p>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th>Order ID</th>
                                    <th>Product</th>
                                    <th>Customer</th>
                                    <th>Price</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model)
                                {
                                    <tr>
                                        <td>
                                            <span class="fw-bold">#@order.Id</span>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <img src="@order.product.imgsource" class="product-img rounded" alt="@order.product.Name">
                                                <div class="ms-3">
                                                    <h6 class="mb-0">@order.product.Name</h6>
                                                    <small class="text-muted">SKU: @order.product.Id</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <i class="bi bi-person-circle fs-5 me-2"></i>
                                                <span>@order.user.UserName</span>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="fw-bold text-success">$@order.product.Price.ToString("0.00")</span>
                                        </td>
                                        <td>
                                            <select class="form-select status-select">
                                                <option value="pending">Pending</option>
                                                <option value="processing">Processing</option>
                                                <option value="completed">Completed</option>
                                                <option value="cancelled">Cancelled</option>
                                            </select>
                                        </td>
                                        <td>
                                            <div class="btn-group">
                                                <button class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-eye"></i>
                                                </button>
                                                <button class="btn btn-sm btn-outline-success">
                                                    <i class="bi bi-check2"></i>
                                                </button>
                                                <button class="btn btn-sm btn-outline-danger">
                                                    <i class="bi bi-x"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .search-box {
        position: relative;
        max-width: 300px;
    }

    .search-icon {
        position: absolute;
        left: 12px;
        top: 50%;
        transform: translateY(-50%);
        color: #6c757d;
    }

    #orderSearch {
        padding-left: 35px;
        border-radius: 8px;
    }

    .filter-select {
        min-width: 150px;
        border-radius: 8px;
    }

    .product-img {
        width: 50px;
        height: 50px;
        object-fit: cover;
    }

    .status-select {
        max-width: 140px;
        font-size: 0.875rem;
        padding: 0.25rem 0.5rem;
        border-radius: 6px;
    }

    .btn-group .btn {
        padding: 0.25rem 0.5rem;
        margin: 0 2px;
    }

    .empty-state {
        padding: 3rem;
    }

    .empty-state i {
        color: #e2e8f0;
    }

    .table > :not(caption) > * > * {
        padding: 1rem;
    }

    .table tbody tr {
        transition: all 0.2s ease;
    }

    .table tbody tr:hover {
        background-color: rgba(99, 102, 241, 0.05);
    }

    @@media (max-width: 768px) {
        .d-flex.justify-content-md-end {
            margin-top: 1rem;
            justify-content: flex-start !important;
        }

        .search-box {
            max-width: 100%;
        }
    }
</style>