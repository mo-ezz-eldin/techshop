@model e_commerce.viewmodels.userloginviewmodel
@{
    ViewData["Title"] = "Login";
}

<style>
    :root {
        --primary: #6366f1;
        --secondary: #06d6a0;
        --accent: #f472b6;
        --dark: #1a1b1e;
        --light: #f8f9fc;
        --primary-gradient: linear-gradient(135deg, #6366f1 0%, #8183f4 100%);
        --hover-gradient: linear-gradient(135deg, #4f46e5 0%, #a855f7 100%);
    }

    .login-container {
        background: linear-gradient(rgba(248,249,252,0.95), rgba(248,249,252,0.95)), url('https://images.unsplash.com/photo-1497864149936-d3163f0c0f4b?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80');
        background-size: cover;
        min-height: 100vh;
        display: flex;
        align-items: center;
        position: relative;
        overflow: hidden;
    }

    .floating-shapes {
        position: absolute;
        width: 100%;
        height: 100%;
        pointer-events: none;
    }

    .floating-shape {
        position: absolute;
        animation: float 15s infinite linear;
        opacity: 0.1;
        filter: blur(40px);
    }

    @@keyframes float {
        0%, 100% {
            transform: translate(0, 0) rotate(0deg);
        }

        25% {
            transform: translate(10px, 10px) rotate(5deg);
        }

        50% {
            transform: translate(-10px, 15px) rotate(-5deg);
        }

        75% {
            transform: translate(5px, -10px) rotate(3deg);
        }
    }

    .login-card {
        backdrop-filter: blur(12px);
        background: rgba(255, 255, 255, 0.95);
        border-radius: 25px;
        box-shadow: 0 25px 50px rgba(99, 102, 241, 0.15);
        padding: 3rem;
        max-width: 500px;
        transform: translateY(0);
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
    }

        .login-card::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: repeating-linear-gradient( 45deg, transparent, transparent 10px, rgba(99, 102, 241, 0.05) 10px, rgba(99, 102, 241, 0.05) 20px );
            animation: slide 20s linear infinite;
        }

    @@keyframes slide {
        from {
            transform: rotate(0deg);
        }

        to {
            transform: rotate(360deg);
        }
    }

    .login-header {
        text-align: center;
        margin-bottom: 2.5rem;
        position: relative;
        z-index: 1;
    }

        .login-header h1 {
            color: var(--dark);
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            background: var(--primary-gradient);
            -webkit-background-clip: text;
            background-clip: text;
            -webkit-text-fill-color: transparent;
        }

    .form-group {
        margin-bottom: 1.75rem;
        position: relative;
        z-index: 1;
    }

    .input-icon {
        position: absolute;
        left: 20px;
        top: 50%;
        transform: translateY(-50%);
        color: var(--primary);
        font-size: 1.2rem;
    }

    .form-control {
        height: 55px;
        border-radius: 12px;
        padding: 0 1.5rem 0 3.5rem;
        border: 2px solid #e0e7ff;
        font-size: 1rem;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.2);
        }

    .btn-login {
        background: var(--primary-gradient);
        color: white;
        height: 55px;
        width: 100%;
        font-size: 1.1rem;
        font-weight: 600;
        border-radius: 12px;
        border: none;
        position: relative;
        overflow: hidden;
        transition: all 0.4s ease;
    }

        .btn-login::after {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: rgba(255,255,255,0.1);
            transform: rotate(45deg) translate(-30%, -100%);
            transition: all 0.4s ease;
        }

        .btn-login:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(99, 102, 241, 0.3);
        }

            .btn-login:hover::after {
                transform: rotate(45deg) translate(30%, 200%);
            }

    .additional-links {
        display: flex;
        justify-content: space-between;
        margin-top: 1.5rem;
        position: relative;
        z-index: 1;
    }

    .link-item {
        color: var(--primary);
        text-decoration: none;
        font-weight: 500;
        padding: 0.5rem;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .link-item:hover {
            color: var(--accent);
            background: rgba(99, 102, 241, 0.05);
        }

    @@media (max-width: 576px) {
        .login-card {
            margin: 1rem;
            padding: 2rem;
        }

        .login-header h1 {
            font-size: 2rem;
        }
    }
</style>

<div class="login-container">
    <div class="floating-shapes">
        <div class="floating-shape" style="top: 20%; left: 10%; width: 150px; height: 150px; background: var(--primary);"></div>
        <div class="floating-shape" style="top: 60%; right: 15%; width: 120px; height: 120px; background: var(--accent); animation-delay: -2s;"></div>
    </div>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-5 col-lg-6 col-md-8">
                <div class="login-card">
                    <div class="login-header">
                        <h1>Welcome Back</h1>
                        <p class="text-muted">Continue your amazing journey</p>
                    </div>

                    <form asp-action="login" method="post">
                        <input type="hidden" name="ReturnUrl" value="@ViewBag.ReturnUrl" />
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="form-group">
                            <i class="fas fa-envelope input-icon"></i>
                            <input asp-for="email" class="form-control" placeholder="Email Address" />
                            <span asp-validation-for="email" class="text-danger small d-block mt-2"></span>
                        </div>

                        <div class="form-group">
                            <i class="fas fa-lock input-icon"></i>
                            <input asp-for="password" class="form-control" placeholder="Password" />
                            <span asp-validation-for="password" class="text-danger small d-block mt-2"></span>
                        </div>

                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="remember_me" />
                                Keep me signed in
                            </label>
                        </div>

                        <button type="submit" class="btn btn-login">
                            <i class="fas fa-sign-in-alt mr-2"></i>Sign In
                        </button>

                        <div class="additional-links">
                            <a asp-action="register" asp-controller="account" class="link-item">
                                Create Account
                            </a>
                            <a href="#" class="link-item">
                                Forgot Password?
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.querySelector('form').addEventListener('submit', function (e) {
            const btn = document.querySelector('.btn-login');
            const form = this;

            const originalBtnHTML = btn.innerHTML;

            if (!$(form).valid()) {
               
                setTimeout(() => {
                    btn.innerHTML = originalBtnHTML;
                    btn.disabled = false;
                }, 0);
                return;
            }

            btn.innerHTML = `<span class="spinner-border spinner-border-sm" role="status"></span> Authenticating...`;
            btn.disabled = true;
        });

   
        document.querySelectorAll('.form-control').forEach(input => {
            input.addEventListener('input', () => {
                const btn = document.querySelector('.btn-login');
                btn.innerHTML = `<i class="fas fa-sign-in-alt mr-2"></i>Sign In`;
                btn.disabled = false;
            });
        });
    </script>
}